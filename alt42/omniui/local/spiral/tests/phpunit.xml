<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="bootstrap.php"
    colors="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    testSuiteLoaderClass="PHPUnit\Runner\StandardTestSuiteLoader"
    verbose="true">
    
    <testsuites>
        <testsuite name="Spiral Scheduler Unit Tests">
            <file>RatioCalculatorTest.php</file>
            <file>TimeAllocatorTest.php</file>
            <file>ConflictResolverTest.php</file>
            <file>SecurityTest.php</file>
            <file>SpiralSchedulerIntegrationTest.php</file>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../../../omniui/spiral/core/</directory>
            <directory suffix=".php">../classes/</directory>
            <exclude>
                <directory suffix=".php">../../../omniui/spiral/config/</directory>
                <directory suffix=".php">../tests/</directory>
            </exclude>
        </whitelist>
    </filter>
    
    <logging>
        <log type="coverage-html" target="coverage/html"/>
        <log type="coverage-clover" target="coverage/clover.xml"/>
        <log type="junit" target="coverage/junit.xml"/>
    </logging>
    
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="DB_HOST" value="localhost"/>
        <env name="DB_NAME" value="test_mathking"/>
        <env name="DB_USER" value="test_user"/>
        <env name="DB_PASS" value="test_pass"/>
        <const name="MOODLE_INTERNAL" value="1"/>
        <const name="DEBUG_MODE" value="true"/>
    </php>
</phpunit>