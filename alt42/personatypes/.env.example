# Shining Stars 환경 설정 파일
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=shiningstars
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Moodle 연동 설정
MOODLE_URL=https://your-moodle-site.com
MOODLE_DB_PREFIX=mdl_
MOODLE_WEBSERVICE_TOKEN=your_moodle_webservice_token
LTI_CONSUMER_KEY=shiningstars
LTI_SHARED_SECRET=generate_a_secure_random_string

# OpenAI API 설정
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# 애플리케이션 설정
APP_NAME="Shining Stars"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com/shiningstars
APP_TIMEZONE=Asia/Seoul
APP_LOCALE=ko

# 세션 설정
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# 로깅 설정
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_MAX_FILES=30

# 캐시 설정
CACHE_DRIVER=file
CACHE_PREFIX=shiningstars_

# 보안 설정
ENCRYPTION_KEY=generate_32_character_random_string
ALLOWED_ORIGINS=https://your-moodle-site.com,https://your-domain.com
RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_MINUTE=10

# 파일 업로드 설정
MAX_UPLOAD_SIZE=10M
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# 이메일 설정 (선택사항)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# 개발 환경 설정 (production에서는 false로 설정)
SHOW_ERRORS=false
SHOW_SQL_QUERIES=false
ENABLE_QUERY_LOG=false

# AI 프롬프트 설정
AI_SYSTEM_PROMPT_VERSION=1.0
AI_RESPONSE_STYLE=friendly_encouraging
AI_EMOTION_DETECTION=true
AI_PERSONALIZATION=true

# 기능 플래그
FEATURE_TEACHER_DASHBOARD=true
FEATURE_AI_INSIGHTS=true
FEATURE_ACHIEVEMENT_SYSTEM=true
FEATURE_REAL_TIME_FEEDBACK=true

# 모니터링 설정 (선택사항)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# 백업 설정
BACKUP_ENABLED=true
BACKUP_PATH=/path/to/backup/directory
BACKUP_RETENTION_DAYS=30